<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/metro-bootstrap.min.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/metro.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" />
    <style>
        .row {
            margin-bottom: 10px;
        }

        /* Sticky footer styles
        -------------------------------------------------- */
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            /* Margin bottom by footer height */
            margin-bottom: 60px;
            margin-top: 60px;
        }

        .footer {
                position: fixed;
            bottom: 0;
            width: 100%;
            /* Set the fixed height of the footer here */
            height: 60px;
            background-color: #f5f5f5;
        }
    </style>
    <style id="metroChanges">
        .form-horizontal .has-feedback .form-control-feedback {
            top: 0px;
            line-height: 34px;
            right: 15px;
            position: absolute;
        }

        .input-control.small-check .check:before {
            width: 10px;
            height: 6px;
            margin-left: -5px;
            margin-top: -4px;
            border-width: 2px;
        }
    </style>
    <link href="@Url.Content("~/Content/bootstrapValidator.min.css")" rel="stylesheet" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Expert Mobile Config</a>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </footer>

    @*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>*@
    <script src="@Url.Content("~/Scripts/bootstrapValidator.min.js")"></script>
    @*for reference of validation you can visit http://formvalidation.io/*@
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
</body>
</html>
