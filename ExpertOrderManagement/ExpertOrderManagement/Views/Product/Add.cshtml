@model BusinessLogic.Product
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@Styles.Render("~/Content/css/customsweetcss")
<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>Product Master</b></h4>
            <p class="text-muted font-13 m-b-30">
                Add/Edit Product here
            </p>
            @using (Html.BeginForm("Save", "Product", FormMethod.Post, new { @class = "form-horizontal m-t-20", @id = "frmProduct" }))
            {
                <form class="form-horizontal" role="form" data-parsley-validate novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="hori-pass1" class="col-sm-4 control-label">Name</label>
                                    <div class="col-sm-7">
                                        @Html.HiddenFor(x => x.ClientCompanyId)
                                        @Html.HiddenFor(x => x.RefId)
                                        @Html.HiddenFor(x => x.OperationFlag)
                                        @Html.HiddenFor(x => x.Code)
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-4 control-label">Product Group</label>
                                    <div class="col-sm-7">
                                        @if (ViewBag.ProductGroups != null)
                                        {
                                            @Html.DropDownListFor(x => x.Group, new SelectList(ViewBag.ProductGroups, "Code", "Name"), "-- Select --", new { @class = "form-control", @placeholder = "Product Type" })
                                        }
                                        else
                                        {
                                            @Html.DropDownListFor(x => x.Group, new List<SelectListItem>(), new { @class = "form-control", @placeholder = "Product Type" })
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Description</label>
                                <div class="col-sm-7">
                                    @Html.TextAreaFor(x => x.Desc, new { @class = "form-control", @placeholder = "Category 1", @rows = "3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit1, new { @class = "form-control", @placeholder = "Category 2" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Opening Qty</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Op_Qty, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Opening Rate</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Op_Rate, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Opening Value</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Op_Value, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Service Item</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Service, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit 2</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit2, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit 3</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit3, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit 4</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit4, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit 5</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit5, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Unit 6</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Unit6, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Sales Rate</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Sl_Rate, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Purchase Rate</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Pu_Rate, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Max Qty</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.MaxLevel, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Min Qty</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.MinLevel, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Reorder Qty</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.ReOrder, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Packing Qty</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.PackingQty, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Category 1</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Category1, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hori-pass1" class="col-sm-4 control-label">Category 2</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Category2, new { @class = "form-control", @placeholder = "Category 3" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="hori-pass1" class="col-sm-4 control-label">MRP</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(x => x.Valuation, new { @class = "form-control", @placeholder = "Category 3" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <a href="@Url.Action("Add", "Product", new { ID=0})" i id="btnAdd" type="button" class="btn btn-lg btn-default waves-effect waves-light m-l-5">
                                <i class="ti-plus"></i>&nbsp;&nbsp;Add
                            </a>
                            <button id="btnSave" type="submit" class="btn btn-lg btn-primary waves-effect waves-light">
                                <i class="ti-save"></i>&nbsp;&nbsp; Save
                            </button>
                            <button id="btnDelete" type="button" class="btn btn-lg btn-danger waves-effect waves-light m-l-5">
                                <i class="ti-trash"></i>&nbsp;&nbsp;Delete
                            </button>
                            <button id="btnView" type="button" class="btn btn-lg btn-warning waves-effect waves-light m-l-5">
                                <i class="ti-search"></i>&nbsp;&nbsp;View
                            </button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
<div id="custom-modal" class="modal-demo">
    <button type="button" class="close" onclick="Custombox.close();">
        <span>&times;</span><span class="sr-only">Close</span>
    </button>
    <h4 class="custom-modal-title">Product</h4>
    <div class="custom-modal-text" id="AllProducts" style="max-height:500px;overflow:auto;">

    </div>
</div>
@Scripts.Render("~/Content/css/customsweetjs")

<script>
    function ProductAdded(response) {
        swal({
            title: "Information",
            text: "Product is saved successfully.",
            type: "success"
        }, function () {
            $('#btnAdd')[0].click();
        });
    }

    $(document).ready(function () {
        $('#frmProduct').validate({
            rules: {
                Name: {
                    required: true,
                    remote: {
                        url: '@Url.Action("CheckDuplicateName","Product")',
                        data: { Code: $('#Code').val() },
                        type: "POST"
                    }
                }
            },
            messages: {
                Name: {
                    required: "Please enter Name",
                    remote: "Group name is already entered, Please enter another group name"
                }
            },
            submitHandler: function (form) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Save","Product")",
                    data: $('#frmProduct').serialize(),
                    success: function (response) {
                        ProductAdded();
                    }
                });
                return false;
            }
        });
        $('#btnView').click(function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAll","Product")",
                success: function (response) {
                    $('#AllProducts').html(response);
                    Custombox.open({
                        animation: 'rotatedown',
                        plugin: 'custommodal',
                        overlayspeed: '100',
                        overlaycolor: '#36404a',
                        target: '#custom-modal'
                    });
                    $('body').on('dblclick', '#tblProduct tbody tr', function () {
                        window.location.href = '@Url.Action("Add", "Product", new { Id="REPLACE"})'.replace('REPLACE', $(this).data('empid'));
                    });
                }
            });

        });
        $('#btnDelete').click(function () {
            if ($('#RefId').val() == "00000000-0000-0000-0000-000000000000") {
                swal("Please select any record First!", "In order to delete emplyee, You need to select a Product first.")
            }
            else {
                swal({
                    title: "Are you sure want to delete this Product?",
                    text: "You will not be able to recover this record!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, delete it!",
                    cancelButtonText: "No, cancel plz!",
                    closeOnConfirm: false,
                    closeOnCancel: false
                }, function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "GET",
                            url: "@Url.Action("Delete","Product")",
                            data: { ID: $('#ID').val() },
                            success: function (response) {
                                if (response.IsSuccess == true) {
                                    swal("Deleted!", "Product is deleted Successfully.", "success");
                                    setTimeout(5000, function () {
                                        $('#btnAdd')[0].click();
                                    });
                                }
                                else {
                                    swal("Opssss!", "Something seems wrong while deleting Product.", "error");
                                }
                            }
                        });

                    } else {
                        swal("Cancelled", "Product is safe :)", "error");
                    }
                });
            }
        });
    });
</script>
