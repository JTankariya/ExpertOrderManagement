@model IEnumerable<BusinessLogic.Order>
@Styles.Render("~/Content/css/datatablecss")

<table id="tblOrder" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order No</th>
            <th>Order Date</th>
            <th>Party</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var order in Model)
            {
                <tr data-empid="@order.RefId">
                    <td>@order.Ord_no</td>
                    <td>@order.Ord_Dt.ToString("dd/MM/yyyy")</td>
                    <td>@order.OrderParty.Name</td>
                    <td>@order.Ord_value</td>
                </tr>
            }
        }
    </tbody>
</table>
@Scripts.Render("~/Content/js/datatablejs")

<script>
    $(document).ready(function () {
        $('#tblOrder').DataTable();
    });
</script>