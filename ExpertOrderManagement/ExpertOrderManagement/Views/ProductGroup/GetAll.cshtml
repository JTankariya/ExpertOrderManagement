@model IEnumerable<BusinessLogic.ProductGroup>
@Styles.Render("~/Content/css/datatablecss")

<table id="tblProductGroup" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category 1</th>
            <th>Category 2</th>
            <th>Category 3</th>
            <th>Parent</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var group in Model)
            {
                <tr data-empid="@group.RefId">
                    <td>@group.Name</td>
                    <td>@group.Category1</td>
                    <td>@group.Category2</td>
                    <td>@group.Category3</td>
                    <td>@group.Parent</td>
                </tr>
            }
        }
    </tbody>
</table>
@Scripts.Render("~/Content/js/datatablejs")

<script>
    $(document).ready(function () {
        $('#tblProductGroup').DataTable();
    });
</script>