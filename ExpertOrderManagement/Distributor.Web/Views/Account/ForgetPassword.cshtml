@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row-fluid">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Forget Password</h3>
            </div>
            <div class="panel-body">
                <form id="frmForgetPassword" action="@Url.Action("ForgetPassword","Account")" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email Id :</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Email" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary"> <span class="glyphicon glyphicon-ok"></span> &nbsp;&nbsp;Send Password</button>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-12">
                <a href="@Url.Action("LogIn","Account")" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span> &nbsp;&nbsp;LogIn</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#frmForgetPassword').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                Email: {
                    validators: {
                        notEmpty: {
                            message: 'Please enter Email'
                        },
                        emailAddress: {
                            message: 'Please enter proper Email Address'
                        }
                    }
                }
            }
        });
    });
</script>